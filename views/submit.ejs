<%- include('partials/header') %>

    <div class="container">
        <div class="jumbotron centered">
            <i class="fas fa-key fa-6x"></i>
            <h1 class="display-3">Secrets</h1>
            <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

            <form action="/submit" id="submit" method="POST">

                <div class="form-group">
                    <textarea name="secret" form="submit" class="form-control text-center" placeholder="What's your secret?" cols="30" rows="10"></textarea>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>



        </div>
    </div>
    <%- include('partials/footer') %>

        <input width="" type="text" class="form-control text-center" name="secret" placeholder="What's your secret?">