<%- include('partials/header') %>



    <% if(me.name){ %>

        <% }else{ %>
            <div class="jumbotron text-center">
                <form action="/name" method="POST">
                    <h4>Please choose one username</h4>
                    <input type="text" placeholder="username" name="username">
                    <button type="submit">submit</button>
                </form>
            </div>
            <% } %>






                <div class="jumbotron ">

                    <div class="text-center ">
                        <i class="fas fa-key fa-6x"></i>
                    </div>

                    <h1 style="margin-bottom: 10vw;" class="text-center display-3">My Secret!</h1>
                    <a style="margin-left: 50vw;" class="btn text-center btn-dark btn-lg" href="/submit" role="button">Publish a Secret</a>
                    <hr>
                    <% my.forEach(item=>{ %>



                        <div class="card">
                            <div class="card-header row">
                                <i class="fab fa-studiovinari icon-large"></i>
                                <%= item.date %>
                            </div>
                            <div class="card-body secrets">
                                <p class="jumbotron text-center box" style="text-align: center;">
                                    <%= item.secret %>
                                </p>
                            </div>
                            <div class="card-footer">



                                <div class="row">
                                    <div class="col-3">

                                        <iframe name="<%= item._id %>" style="display:none;"></iframe>
                                        <form action="/like" method="POST" target="<%= item._id %>">

                                            <button type="submit" name="click" value="<%= item._id %>"> <i class="fa fa-heart" onClick="window.location.reload();"></i>
                                            <input type="hidden" name="person" value="<%= me._id %>">
                                                <%=item.likes.length %>
                                </button>

                                        </form>

                                    </div>

                                    <div class="col-2">

                                        <form action="show_comment" method="POST">
                                            <input type="hidden" name="show" value="<%= item._id %>">
                                            <button style="border:none;" type="submit"> <i class="fa fa-eye" aria-hidden="true"></i></button>
                                        </form>

                                    </div>
                                    <div class="col-7">

                                        <form action="/comment" method="POST" target="<%= item._id %>">
                                            <input type="text" name="comment" placeholder="comments">
                                            <input type="hidden" name="user" value="<%= me.name %>">
                                            <button type="submit" name="press" value="<%= item._id %>" onClick="window.location.reload();">submit</button>

                                        </form>
                                    </div>

                                </div>



                            </div>
                        </div>


                        <% }) %>

                            <hr>
                </div>



                <%- include('partials/footer') %>